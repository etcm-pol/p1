{% extends 'base.html.twig' %}

{% block javascripts %}
    {% javascripts
    '@AppBundle/Resources/js/patient/new-patient.js' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    <div class="col-lg-8">
        <form method="POST" action="?" class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-3" for="firstname">Imię: </label>
                <div class="col-sm-9">
                    <input type="text" name="firstname" class="form-control" id="firstname" placeholder="Wpisz imię">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" for="lastname">Nazwisko: </label>
                <div class="col-sm-9">
                    <input type="text" name="lastname" class="form-control" id="lastname" placeholder="Wpisz nazwisko">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" for="lastname">Płeć: </label>
                <div class="col-sm-9">
                    <div class="radio-inline">
                        <label><input type="radio" value="1" name="sex">Mężczyzna</label>
                    </div>
                    <div class="radio-inline">
                        <label><input type="radio" value="2" name="sex">Kobieta</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3">Data urodzenia</label>
                <div class="col-sm-3">
                    <select class="form-control" name="bdate1">
                        <option>Dzień</option>
                        {% for d in 1..31 %}
                            <option>{{ d }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-sm-3">
                    <select class="form-control" name="bdate2">
                        <option>Miesiąc</option>
                        {% for m in 1..12 %}
                            <option>{{ m }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-sm-3">
                    <select class="form-control" name="bdate3">
                        <option>Rok</option>
                        {% for y in 2017..1800 %}
                            <option>{{ y }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <hr/>
            <div class="form-group">
                <label class="control-label col-sm-3" for="street">Ulica</label>
                <div class="col-sm-9">
                    <input type="text" name="street" class="form-control" id="street" placeholder="Wpisz ulice">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" for="street_number">Numer</label>
                <div class="col-sm-9">
                    <input type="text" name="street_number" class="form-control" id="street_number"
                           placeholder="Wpisz numer">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" for="city">Miejscowość</label>
                <div class="col-sm-9">
                    <input type="text" name="city" class="form-control" id="city" placeholder="Wpisz miejscowość">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" for="post_code">Kod pocztowy</label>
                <div class="col-sm-9">
                    <input type="text" name="post_code" class="form-control" id="post_code"
                           placeholder="Wpisz kod pocztowy">
                </div>
            </div>
            <hr/>
            <div class="form-group">
                <label class="control-label col-sm-3" for="street">Email</label>
                <div class="col-sm-9">
                    <input type="email" name="email" class="form-control" id="email" placeholder="Wpisz email">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" for="phone">Telefon</label>
                <div class="col-sm-9">
                    <input type="text" name="phone" class="form-control" id="phone" placeholder="Wpisz numer telefonu">
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-buttons">
                    <input type="submit" class="btn btn-success" value="Zapisz"/>
                </div>
            </div>
        </form>
    </div>
    <div class="col-lg-4">
        <h6>Kopie robocze: </h6>
        <ul class="list-group">
            <li class="list-group-item">Jan Nowak <span class="badge">01/01/2017</span></li>
            <li class="list-group-item">Krystyna ?<span class="badge">22/12/2016</span></li>
            <li class="list-group-item">? Bąbel <span class="badge">05/10/2016</span></li>
        </ul>
    </div>
{% endblock %}