{% extends app.request.attributes.get('_route') == "patient_new_form_ajax" ? 'ajax_base.html.twig' : 'base.html.twig' %}

{% if "patient_new_form_ajax" not in app.request.attributes.get('_route') %}
    {% block javascripts %}
        {% javascripts
        '@AppBundle/Resources/js/patient/new-patient.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
        {% endjavascripts %}
    {% endblock %}
{% endif %}

{% block body %}
    <div class="row">
        <div class="col-lg-12" style="text-align: center;">
            <h2>Nowy pacjent</h2>
        </div>
    </div>
    <div style="clear: both; height: 25px;"></div>
    <div class="row">
        <hr>
        <div class="col-lg-8 col-lg-offset-2">
            <form method="POST" action="?" class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-sm-3" for="firstname">Imię: </label>
                    <div class="col-sm-9">
                        <input type="text" name="firstname" class="form-control" id="firstname"
                               placeholder="Wpisz imię">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3" for="lastname">Nazwisko: </label>
                    <div class="col-sm-9">
                        <input type="text" name="lastname" class="form-control" id="lastname"
                               placeholder="Wpisz nazwisko">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3" for="lastname">Płeć: </label>
                    <div class="col-sm-9">
                        <div class="radio-inline">
                            <label><input type="radio" value="1" name="sex">Mężczyzna</label>
                        </div>
                        <div class="radio-inline">
                            <label><input type="radio" value="2" name="sex">Kobieta</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-12 col-sm-3">Data urodzenia</label>
                    <div class="col-xs-12 col-sm-3">
                        <select class="form-control" name="bdate1" style="width: 100%;">
                            <option>Dzień</option>
                            {% for d in 1..31 %}
                                <option>{{ d }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-xs-12 col-sm-3">
                        <select class="form-control" name="bdate2" style="width: 100%;">
                            <option>Miesiąc</option>
                            {% for m in 1..12 %}
                                <option>{{ m }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-xs-12 col-sm-3">
                        <select class="form-control" name="bdate3" style="width: 100%;">
                            <option>Rok</option>
                            {% for y in 2017..1800 %}
                                <option>{{ y }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <hr/>
                <div class="form-group">
                    <label class="control-label col-sm-3" for="street">Ulica</label>
                    <div class="col-sm-9">
                        <input type="text" name="street" class="form-control" id="street" placeholder="Wpisz ulice">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3" for="street_number">Numer</label>
                    <div class="col-sm-9">
                        <input type="text" name="street_number" class="form-control" id="street_number"
                               placeholder="Wpisz numer">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3" for="city">Miejscowość</label>
                    <div class="col-sm-9">
                        <input type="text" name="city" class="form-control" id="city" placeholder="Wpisz miejscowość">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3" for="post_code">Kod pocztowy</label>
                    <div class="col-sm-9">
                        <input type="text" name="post_code" class="form-control" id="post_code"
                               placeholder="Wpisz kod pocztowy">
                    </div>
                </div>
                <hr/>
                <div class="form-group">
                    <label class="control-label col-sm-3" for="street">Email</label>
                    <div class="col-sm-9">
                        <input type="email" name="email" class="form-control" id="email" placeholder="Wpisz email">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3" for="phone">Telefon</label>
                    <div class="col-sm-9">
                        <input type="text" name="phone" class="form-control" id="phone"
                               placeholder="Wpisz numer telefonu">
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-buttons">
                        <input type="submit" class="btn btn-success" value="Zapisz"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}